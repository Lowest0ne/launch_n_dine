<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'First Name',  required: true %>
    <%= f.input :last_name, label: 'Last Name', required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
    <%= f.hidden_field :role  %>

    <%= f.simple_fields_for( :restaurants ) do |restaurant_form| %>
      <%= restaurant_form.input :name, label: 'Restaurant Name'  %>
      <%= restaurant_form.simple_fields_for( :locations ) do |location_form| %>
        <%= location_form.input :street, label: 'Restaurant Address', required: true %>
        <%= location_form.input :city, label: 'Restaurant City', required: true %>
        <%= location_form.input :state, label: 'Restaurant State', required: true %>
      <% end %>
    <% end %>

    <%= f.simple_fields_for( :locations ) do |location_form| %>
      <%= location_form.input :street, label: 'Street', required: true %>
      <%= location_form.input :city, label: 'City', required: true %>
      <%= location_form.input :state, label: 'State', required: true %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
