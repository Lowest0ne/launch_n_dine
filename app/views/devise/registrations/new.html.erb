<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <!-- <%= f.error_notification %> -->
  <div class="form-inputs">
    <%= f.input :first_name, label: false,  placeholder: 'First Name',  required: true %>
    <%= f.input :last_name, label: false, placeholder: 'Last Name', required: true %>
    <%= f.input :email, label: false, placeholder: 'Email Address', required: true %>
    <%= f.input :password, label: false, placeholder: 'Password', required: true %>
    <%= f.input :password_confirmation, label: false, placeholder: 'Password Confirmation', required: true %>
    <%= f.hidden_field :role  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>

