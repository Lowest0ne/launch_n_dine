<%= simple_form_for @menu_item do |form| %>
  <%= form.input :name,
      label: false,
      placeholder: 'Menu Item Name',
      required: true,
      autofocus: true %>
  <%= form.input :description,
      label: false,
      placeholder: 'Description' %>
  <%= form.input :price,
      label: false,
      placeholder: 'Price' %>
  <%= form.button :submit %>
<% end %>
