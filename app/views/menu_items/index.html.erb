<ul>
  <% @menu.menu_items.each do |menu_item| %>
    <%= content_tag :li, menu_item.name %>
  <% end %>
</ul>

<%= simple_form_for [ @menu,@menu_item ] do |form| %>
  <%= form.input :name, label: false, placeholder: 'Item Name', required: true, autofocus: true %>
  <%= form.input :description, label: false, placeholder: 'Description' %>
  <%= form.input :price, label: false, placeholder: 'Price' %>
  <%= form.submit 'Create Menu Item' %>
<% end %>
