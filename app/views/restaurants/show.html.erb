<%= content_tag :h1, @restaurant.name %>
<%= content_tag :h2, @restaurant.location.street %>
<%= content_tag :h2, @restaurant.location.city %>
<%= content_tag :h2, @restaurant.location.state %>
<%= link_to 'Menus', restaurant_menus_path( @restaurant ) %>

<% if current_user %>
  <% case current_user.role %>
  <% when 'driver' %>
    <%= link_to 'View Orders', '#' %>
  <% when 'owner' %>
    <% if @restaurant.user == current_user %>
      <%= link_to 'View Orders', '#' %>
      <%= link_to 'Edit',   edit_restaurant_path( @restaurant ) %>
      <%= link_to 'Delete', restaurant_path( @restaurant ), method: :delete %>
    <% end %>
  <% end %>
<% end %>

